 option_settings:
  aws:elasticbeanstalk:application:environment:
    # --- General environment variables ---
    ENVIRONMENT: production
    LOG_LEVEL: info
    
    # --- PostgreSQL (RDS) credentials ---
    DB_HOST: p
    DB_PORT: "5432"
    DB_NAME: atssystem
    DB_USER: postgres
    DB_PASSWORD: p

    # --- ChromaDB (EBS path) ---
    CHROMADB_PATH: /mnt/ebs/chroma_db_data

    # --- Sentry DSN ---
    SENTRY_DSN: https://78b82319c77e287d108d3702614386dd@o4508931097100288.ingest.de.sentry.io/4508931099000912

packages:
  yum:
    # These are optional but useful for PDFs, DOCX, etc.
    poppler-utils: []      # for PDF parsing
    libmagic: []           # for file-type detection
    gcc: []                # required for some Python libs

commands:
  01_mkdir_ebs:
    command: "mkdir -p /mnt/ebs/chroma_db_data"
